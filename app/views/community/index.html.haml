%hr/
.w60
  %p{style: 'margin-right: 10px;'} If you have ideas, needs or suggestions
  = link_to _('Join our user group'),               |
    RememberMe::Application.config.user_group_url,  |
    :class => "button fchat",                       |
    :target => "_blank",                            |
    :style => "margin-right: 10px"                  |
