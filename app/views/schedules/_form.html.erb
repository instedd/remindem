<% content_for :head do %>
  <%= javascript_include_tag 'schedules' %>
<% end %>

<%= form_for(@schedule) do |f| %>
  <% if @schedule.errors.any? %>  
    <div class="box w60 error_description">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field w60">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, :class => "causesPendingSaveNoticeOnChange" %>
  </div>
  
  <div class="field w60">
    <%= f.label :keyword, "Keyword" %>
    <p>Users will register with this keyword</p>
    <%= f.text_field :keyword, :class => "causesPendingSaveNoticeOnChange" %>
  </div>

  <div class="field">
    <%= f.label :welcome_message, "Welcome message" %>
    <div class="w60">
      <%= f.text_area :welcome_message, :rows => 3, :class => "causesPendingSaveNoticeOnChange ux-wajbar", :placeholder => 'Write your welcome message here' , :maxlength => 140 %>
    </div>
  </p>
  
  <div class="field">
    <label>Mode</label>
    <p>Choose whether you want to set up a timeline for your messages or send them randomly</p>

    <%= f.radio_button :type,
      "FixedSchedule",
      :id => "fixed_schedule_option",
      :class => "causesPendingSaveNoticeOnChange styled"
    %>
    <%= f.label :type, "Timeline", :class => 'radio' %>
    <br/>
    
    
    <%= f.radio_button :type,
      "RandomSchedule",
      :id => "random_schedule_option",
      :class => "causesPendingSaveNoticeOnChange styled"
    %>
    <%= f.label :type, "Random", :class => 'radio' %>
    <span>once every</span>
    
    <div class="ux-dropdown w20 inline">
      <%= f.select :timescale, Schedule.time_scales, {}, :class => "causesPendingSaveNoticeOnChange" %>
    </div>
    
  </div>

  <p class="w60">
    <%= "This Reminder is #{
      if @schedule.paused?
        'paused and won\'t send messages'
      else
        'active and will be sending messages to registered users with the scheduled configured below'
      end
    }." %>
  </p>

  <div class="field">
    <%= f.check_box :paused?, :type =>"checkbox" %>
    <%= f.label :paused?, "Pause this reminder", :class => 'checkbox' %>
  </div>

  <hr />

  <p class = "Title">Messages</p>
  <p>Write your schedule's messages</p>
  <ul>
    <% @schedule.messages.each.with_index do |message,index| %>
      <%= f.fields_for :messages, message do |message_form| %>
        <%= render "message_fields", :f => message_form, :index => index%>
	   <% end %>
    <% end %>
   <li class="fields">
    <%= link_to_add_fields "add message", f, :messages, :class => "causesPendingSaveNoticeOnClick" %>
  </li>
	</ul>
  <div class="actions">
    <button type="submit" class="orange">Save</button>
    <%= link_button_to 'Cancel', schedules_path %>
  </div>
<% end %>