<%= form_for(@schedule) do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :keyword, "Users will register with keyword:" %><br />
    <%= f.text_field :keyword %>
  </div>
  <div class="field">
    <%= f.label :welcome_message, "Then, they'll receive this welcome message:" %><br />
    <%= f.text_field :welcome_message %>
  </div>
  <div class="field">
    <%= f.label :timescale, "Time scale is:" %><br />
	<%= select :schedule, :timescale, Schedule.time_scales %>
  </div>

  <h2>Choose whether you want to:</h2>
  <div class="field">
	<%= f.radio_button :type, "FixedSchedule" %>
	<%= f.label :fixed_schedule, "Set up a timeline for your messages..." %>
  </div>
  <div class="field">
	<%= f.radio_button :type, "RandomSchedule" %>
	<%= f.label :random_schedule, "...or send them randomly" %>
  </div>

  <h2>Write your schedule's messages:</h2>
  <table>
	<thead>
	  <tr>
	    <th>
		  Offset
	    </th>
	    <th>
		  Text
        </th>
	  </tr>
	</thead>
	<tbody>
	  <%= f.fields_for :messages do |message_form| %>
	  <tr class="fields">
	    <td>
			<%= message_form.object.offset %>
		</td>	
		<td>
			<%= message_form.object.text %>
		</td>
		<td>
	      <% unless message_form.object.new_record? %>
			<%= link_to_remove_fields "remove", message_form %>
	      <% end %>
		</td>	
	  </tr>
	  <% end %>
	</tbody>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
