<%
  save_onclick ||= 'confirm_changes(this);'
  cancel_onclick ||= 'revert_changes(this);'
%>

<li class="fields">
  <div class="box grey w60">

      <%= link_to_remove_fields '', f, :class => "fdelete causesPendingSaveNoticeOnClick" %>      
  
  <div class="offset left">
    After<br/>
    <div class="ux-nstep">
      <%= tag :input, :name => "edit_offset", :size => "2", :type => "text", :value => f.object.offset %>
    </div>
    <span class="timescale"><%= @schedule.timescale %></span>
  </div>
  
  <div class="text">
    <%= content_tag :textarea, f.object.text, :rows => 5, :class => "ux-wajbar w60", :placeholder => 'Add message here',
      :name => "edit_text" , :maxlength => 140 %>
  </div>
  
  <hr/>
  
  <div class="actions">
    <button type="button" class="white" onclick="<%=save_onclick%>">Save</button>
    <a href="#" onclick="<%=cancel_onclick%>; return false;">Cancel</a>
  </div>

  </div>
</li>