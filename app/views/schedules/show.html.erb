<% content_for :head do %>
	<script type="text/javascript">
		function updateNotifyValue(){
			if ($('#notifySubscribers:checked').val() !== undefined) {
				send_notification = true;
			}else {
				send_notification = false;
			}
			$('#delete').attr('href', ($('#delete').attr('href').replace("NOTIFY_VALUE", send_notification)));
		};
	</script>
<% end %>

<%= render "shared/schedule_tabs_and_title", :schedule => @schedule %>

<div class="box tab">
	<h2>Status</h2>
	<p>Here you can see the overall status of your schedule</p>

	<div class="box grey subscribersBox">
		<div class="left">
			<div class="subscribersCount"><%= @schedule.subscribers.count %></div>
			<div>subscribers</div>
		</div>
		<div class="right">
			<%= link_button_to 'Download as CSV', schedule_subscribers_path(@schedule.id)+'.csv', :class => "csvDownload white" %>
		</div>
		<div class="clear"></div>
	</div>
	<br>
	<hr>
	<h2>Properties</h2>
	<p>This is a summary of the properties of your schedule</p>
	<p>
		Keyword: <%= @schedule.keyword %><br>
		Mode: <%= @schedule.class.mode_in_words %><br>
		Messages: <%= @schedule.messages.count %>
	</p>

	<%= link_to '', edit_schedule_path(@schedule), :class => 'farrow' %><%= link_to 'Edit', edit_schedule_path(@schedule) %>
	<p><a href="#" class="icon cremove" onclick="toggle_visibility('deleteConfirmation'); return false;" ></a>Delete this schedule?</p>
	<div id="deleteConfirmation" style="display:none">
		<input type="checkbox" checked="" name="notifySubscribers" id="notifySubscribers">
		<%= label_tag :notifySubscribers, "Send deletion notification to subscribers?" %><br>
		<%= link_to 'Delete', schedule_path(@schedule, :notify => "NOTIFY_VALUE"), :method => :delete , :class => "button white", :id => "delete", :onclick => "updateNotifyValue();" %>
		<a href="#" onclick="toggle_visibility('deleteConfirmation'); return false;" >Cancel</a>
	</div>
</div>
