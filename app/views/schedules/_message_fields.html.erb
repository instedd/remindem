<tr class="fields">
    <td class="offsetColumn">
		<%= f.hidden_field :offset, :class => "offset" %>
		<%= f.object.offset %>
	</td>	
	<td class="textColumn">
		<%= f.hidden_field :text, :class => "text" %>		
		<%= f.object.text %>
	</td>
	<td>
		<%= link_to_edit_fields "edit", f, :messages, f.object %> | <%= link_to_remove_fields "remove", f, :class => "causesPendingSaveNoticeOnClick" %>
	</td>		
</tr>