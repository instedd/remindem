%hr
%p
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    Forgot your password?
    = link_to _("Reset it"), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %br
    = link_to _("Didn't receive confirmation instructions?"), new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %br
    = link_to _("Didn't receive unlock instructions?"), new_unlock_path(resource_name)
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      %br
      = link_to _("Sign in with") + provider.to_s.titleize, omniauth_authorize_path(resource_name, provider)