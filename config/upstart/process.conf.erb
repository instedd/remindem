start on starting <%= app %>-<%= name %>
stop on stopping <%= app %>-<%= name %>

respawn
respawn limit 10 600

chdir <%= engine.root %>

env PORT=<%= port %>
<% engine.env.each_pair do |var,env| %>
env <%= var.upcase %>=<%= shell_quote(env) %>
<% end %>

exec su <%= user %> --session-command='<%= process.command %> >> <%= log %>/<%=name%>-<%=num%>.log 2>&1'